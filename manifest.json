{
    "version": "1.0",
    "manifest_version": 3,
    "name": "Handy Calculator",
    "description": "This extension is a handy simple calculator for quick calculations while surfing the web",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"

    },
    "permissions": [
        "activeTab"
    ]
}